<?xml version="1.0" encoding="utf-8"?>
<com.elves.note.widget.ElvesRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_paper_01">

    <include layout="@layout/layout_new_note_menu_bar"
        android:id="@+id/note_menu"/>

    <ScrollView
        android:layout_above="@id/note_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <com.elves.note.widget.RichEditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NoteContent"
            />
    </ScrollView>
</com.elves.note.widget.ElvesRelativeLayout>