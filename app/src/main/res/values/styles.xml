<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/Animation.Elves.Activity</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Elves.Activity</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoteContent">
        <item name="android:paddingLeft">@dimen/new_note_content_padding_left</item>
        <item name="android:paddingRight">@dimen/new_note_line_padding_right</item>
        <item name="android:paddingTop">@dimen/new_note_content_padding_top</item>
        <item name="android:paddingBottom">@dimen/new_note_content_padding_bottom</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|top</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">30000</item>
        <item name="android:textSize">@dimen/new_note_content_textsize</item>
        <item name="android:lineSpacingExtra">@dimen/new_note_content_line_spacing_extra</item>
    </style>


    <style name="MenuDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/new_note_menu_ver_line_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/new_note_menu_bar_vertical_sep_line</item>
    </style>

    <style name="new_note_menu_item">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">0dp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.Toolbar.AppBarOverlay">
    </style>

    <style name="AppTheme.Toolbar.PopupOverlay">
    </style>
</resources>
